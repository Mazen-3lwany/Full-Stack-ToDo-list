generator client {
  provider = "prisma-client-js"
  output   = "/app/generated/prisma-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  name     String
  email    String  @unique
  password String
  profImag String?
  tasks    Task[]
}

model Task {
  id          String  @id @default(uuid())
  title       String
  description String?
  userId      String
  isDone      Boolean @default(false)
  user        User    @relation(fields: [userId], references: [id])
}
